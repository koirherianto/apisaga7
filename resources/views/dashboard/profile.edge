              <p class="mt-1 text-sm text-gray-500">
                You can <span>                  @mention
                </span>other users and organizations to link to them.
              </p>
            </div>
            <!-- Avatar -->
            <div>
              <h3 class="text-lg font-medium mb-4">
                Avatar
              </h3>
              <div class="flex items-center space-x-4">
